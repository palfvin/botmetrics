<header class="navbar navbar-default navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to "Botmetrics", root_path, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav pull-right">
          <% if current_user %>
            <li><%= link_to "Tables", tables_user_path(current_user) %></li>
            <li><%= link_to "Charts", charts_user_path(current_user) %></li>
            <li><%= link_to "Dashboards", dashboards_user_path(current_user) %></li>
          <% end %>
          <li><%= link_to "About", about_path %></li>
          <% if current_user %>
            <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          <% else %>
            <li><%= link_to "Sign in with Facebook", "/auth/facebook" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>

