<% provide(:title, "Edit chart") %> 
<div id='container' style="width:400px; height:200px;"></div>
<script>
$(document).ready(function () {
  $('#container').highcharts( <%= @chart.javascript.gsub(/"([^(")]+)":/, '\1:').html_safe if @chart.javascript %> );
});
</script>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@chart) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>